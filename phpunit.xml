<phpunit bootstrap="vendor/autoload.php" colors="true" backupGlobals="false">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/src/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="tests/reports/" charset="UTF-8" />
        <log type="coverage-clover" target="tests/reports/clover.xml" charset="UTF-8" />
        <log type="coverage-text" target="php://stdout" />
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
</phpunit>
